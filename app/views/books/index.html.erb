<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |books| %>
      <tr>
        <td><%= books.title %></td>
        <td><%= books.body %></td>
        <%= link_to "Show", book_path(books.id) %>
        <%= link_to "Edit", edit_book_path(books.id) %>
        <%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </tr>
    <% end %>
  </tbody>
</table>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>